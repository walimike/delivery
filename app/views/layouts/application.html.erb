<!DOCTYPE html>
<html>
  <head>
    <title>EComerce</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="https://bulma.io">
        <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
      </a>
  
      <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>
  
    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">
        <a class="navbar-item">
          Home
        </a>
  
        <a class="navbar-item">
          Documentation
        </a>
        </div>
      </div>
      <% if user_signed_in? %>
        <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
              <%= link_to 'Logout', destroy_user_session_path, method: :delete, class:"button is-primary is-danger" %>
          </div>
        </div>
      <% else %>
        <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
          <%= link_to 'Sign up', new_user_registration_path, class:"button is-primary" %>
          <%= link_to 'Login', new_user_session_path, class:"button is-light" %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </nav>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
